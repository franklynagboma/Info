<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="info.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:colorControlNormal">@android:color/transparent</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@android:color/transparent</item>

    </style>

    <style name="login_text" parent="@style/TextAppearance.AppCompat">
        <item name="android:typeface">monospace</item>
    </style>
</resources>
