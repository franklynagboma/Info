<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/card_light">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/card"
                android:padding="2sp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textColor="@color/colorAccent"
                    android:text="A"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:text="B"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="2dp">


                    <RadioGroup
                        android:id="@+id/rgDecision1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp">

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/rbDecision1A"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="@string/decision1A"
                            android:layout_marginBottom="5dp"
                            app:buttonTint="@color/colorAccent"/>

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/rbDecision1B"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="@string/decision1B"
                            android:layout_marginBottom="5dp"
                            app:buttonTint="@color/colorAccent"/>
                    </RadioGroup>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="5dp"
                        android:background="#C0C0C0"/>
                    <RadioGroup
                        android:id="@+id/rgDecision2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp">

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/rbDecision2A"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="@string/decision2A"
                            android:layout_marginBottom="5dp"
                            app:buttonTint="@color/colorAccent"/>

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/rbDecision2B"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="@string/decision2B"
                            android:layout_marginBottom="5dp"
                            app:buttonTint="@color/colorAccent"/>
                    </RadioGroup>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="5dp"
                        android:background="#C0C0C0"/>
                    <RadioGroup
                        android:id="@+id/rgDecision3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp">

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/rbDecision3A"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="@string/decision3A"
                            android:layout_marginBottom="5dp"
                            app:buttonTint="@color/colorAccent"/>

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/rbDecision3B"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="@string/decision3B"
                            android:layout_marginBottom="5dp"
                            app:buttonTint="@color/colorAccent"/>
                    </RadioGroup>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="5dp"
                        android:background="#C0C0C0"/>
                    <RadioGroup
                        android:id="@+id/rgDecision4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp">

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/rbDecision4A"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="@string/decision4A"
                            android:layout_marginBottom="5dp"
                            app:buttonTint="@color/colorAccent"/>

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/rbDecision4B"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="@string/decision4B"
                            android:layout_marginBottom="5dp"
                            app:buttonTint="@color/colorAccent"/>
                    </RadioGroup>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="5dp"
                        android:background="#C0C0C0"/>
                    <RadioGroup
                        android:id="@+id/rgDecision5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp">

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/rbDecision5A"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="@string/decision5A"
                            android:layout_marginBottom="5dp"
                            app:buttonTint="@color/colorAccent"/>

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/rbDecision5B"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="@string/decision5B"
                            android:layout_marginBottom="5dp"
                            app:buttonTint="@color/colorAccent"/>
                    </RadioGroup>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="5dp"
                        android:background="#C0C0C0"/>
                    <RadioGroup
                        android:id="@+id/rgDecision6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp">

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/rbDecision6A"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="@string/decision6A"
                            android:layout_marginBottom="5dp"
                            app:buttonTint="@color/colorAccent"/>

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/rbDecision6B"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="@string/decision6B"
                            android:layout_marginBottom="5dp"
                            app:buttonTint="@color/colorAccent"/>
                    </RadioGroup>

                </LinearLayout>


            </ScrollView>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
