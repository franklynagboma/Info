<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/info_wallpaper_4">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <ImageView
                android:id="@+id/user_info_Image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/nav"
                android:layout_toStartOf="@+id/nav"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"/>
            <ImageView
                android:id="@+id/nav"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_dialog_dialer"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:layout_marginEnd="7dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="210dp">
            <FrameLayout
                android:id="@+id/layout_view_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/image_holder"
                android:layout_marginTop="5dp">
                <ImageView
                    android:id="@+id/view_image"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:padding="5dp"
                    android:scaleType="centerCrop" />
            </FrameLayout>
            <android.support.v7.widget.CardView
                android:id="@+id/intro_card"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginLeft="65dp"
                android:layout_marginStart="65dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <TextView
                        android:id="@+id/user_names"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="aa"
                        android:textColor="@color/black_text"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="3dp"/>
                    <TextView
                        android:id="@+id/user_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="aa"
                        android:textColor="@color/black_text"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="3dp"/>
                    <!--Add the country logo beside country name-->
                    <TextView
                        android:id="@+id/user_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="aa"
                        android:textColor="@color/black_intext"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="3dp"/>
                    <TextView
                        android:id="@+id/user_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="aa"
                        android:textColor="@color/black_intext"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp"/>
                    <ImageView
                        android:id="@+id/edit_info_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_edit_black_24dp"
                        android:scaleType="centerCrop"
                        android:padding="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="end"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--phone number and email-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/intro_card">
                <android.support.v7.widget.CardView
                    android:id="@+id/user_call"
                    android:layout_width="0dp"
                    android:layout_weight="0.999"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:id="@+id/layout_user_call"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@android:drawable/ic_menu_call"
                            android:scaleType="centerCrop"/>
                        <TextView
                            android:id="@+id/user_mobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="aaaaaaaaaaaa"
                            android:padding="5dp"
                            android:textColor="@color/black_text"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.002"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"/>
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="0.999"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:id="@+id/layout_user_mail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@android:drawable/ic_dialog_email"
                            android:scaleType="centerCrop"/>
                        <TextView
                            android:id="@+id/user_mail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="aaaaaaaaaaaa"
                            android:padding="5dp"
                            android:textColor="@color/black_text"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

