<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@drawable/info_user"
        android:id="@+id/layout_image"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <com.franklyn.info.ui.view.CircularImageView
                android:layout_width="71dp"
                android:layout_height="66dp"
                android:scaleType="centerCrop"
                android:id="@+id/user_profileImage"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"/>

            <com.franklyn.info.helper.TextWriter
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text=""
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:id="@+id/user_profileName"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/user_profileImage"
                android:layout_toEndOf="@+id/user_profileImage"
                android:layout_toLeftOf="@+id/user_menu"
                android:layout_toStartOf="@+id/user_menu"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_overflow"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:id="@+id/user_menu"/>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>