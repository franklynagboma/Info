<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:id="@+id/card_contact"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="0.5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a"
            android:textAllCaps="true"
            android:layout_centerVertical="true"
            android:textSize="50sp"
            android:id="@+id/first_letter"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorAccent"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rel_text"
            android:layout_margin="12dp"
            android:layout_toRightOf="@+id/first_letter"
            android:layout_toEndOf="@+id/first_letter">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:layout_centerInParent="true"
            android:id="@+id/user_profileName"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="2dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="10sp"
            android:layout_below="@+id/status_name"
            android:id="@+id/developer_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="10sp"
            android:id="@+id/status_name"
            android:layout_below="@+id/user_profileName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="2dp"
            />
        </RelativeLayout>

        <!--<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/ic_overflow_black"
            android:layout_alignBottom="@+id/rel_text"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_overflow_black"
            android:layout_gravity="bottom"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="3dp"/>
        </LinearLayout>-->


    </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>