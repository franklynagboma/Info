<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.design="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/card_light">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="95"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="1dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/summary_holder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:layout_marginBottom="10dp"
                            android:hint="Summary"
                            android:textColorHint="@color/colorAccent"
                            android.support.design:hintTextAppearance="@style/login_text">
                            <EditText
                                android:id="@+id/summary_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black_text"
                                android:textSize="13sp"
                                android:layout_gravity="top|start"
                                android:lines="10"
                                android:minLines="8"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingTop="10dp"
                                android:nextFocusDown="@+id/job_content"
                                android:inputType="textMultiLine"
                                android:textCursorDrawable="@null" />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/job_holder"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="bottom"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:hint="Job description"
                            android:textColorHint="@color/colorAccent"
                            android.support.design:hintTextAppearance="@style/login_text">
                            <EditText
                                android:id="@+id/job_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black_text"
                                android:textSize="13sp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingTop="10dp"
                                android:nextFocusDown="@+id/years_content"
                                android:inputType="text"
                                android:textCursorDrawable="@null" />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/years_holder"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="bottom"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:hint="Years of Experience"
                            android:textColorHint="@color/colorAccent"
                            android.support.design:hintTextAppearance="@style/login_text">
                            <EditText
                                android:id="@+id/years_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black_text"
                                android:textSize="13sp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingTop="10dp"
                                android:inputType="number"
                                android:textCursorDrawable="@null" />
                        </android.support.design.widget.TextInputLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp">
                            <TextView
                                android:id="@+id/currently"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/currently"
                                android:textColor="@color/colorAccent"
                                android:layout_gravity="center_vertical"/>
                            <RadioGroup
                                android:id="@+id/radio_currently"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp">

                                <android.support.v7.widget.AppCompatRadioButton
                                    android:id="@+id/radio_yes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Yes"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    app:buttonTint="@color/colorAccent"/>
                                <android.support.v7.widget.AppCompatRadioButton
                                    android:id="@+id/radio_no"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="No"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginStart="15dp"
                                    app:buttonTint="@color/colorAccent"/>
                            </RadioGroup>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </FrameLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/send_response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:src="@drawable/ic_action_send"
        android:layout_gravity="bottom|end"/>
</LinearLayout>