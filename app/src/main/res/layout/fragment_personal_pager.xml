<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@color/card_light"
    android:weightSum="100">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="95"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="15dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:layout_gravity="center"
                                android:text="First name"
                                android:textSize="13sp"
                                android:textColor="@android:color/black"
                                android:id="@+id/text_first_name"/>

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_weight="1.5"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:background="@drawable/edit_view"
                                android:gravity="center"
                                android:maxLines="1"
                                android:textColor="@color/black_text"
                                android:textSize="13sp"
                                android:textCursorDrawable="@null"
                                android:nextFocusDown="@+id/last_name"
                                android:inputType="text"
                                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                                android:id="@+id/first_name"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:layout_gravity="center"
                                android:text="Last name"
                                android:textSize="13sp"
                                android:textColor="@android:color/black"
                                android:id="@+id/text_last_name"/>

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_weight="1.5"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:background="@drawable/edit_view"
                                android:gravity="center"
                                android:maxLines="1"
                                android:textColor="@color/black_text"
                                android:textSize="13sp"
                                android:textAllCaps="true"
                                android:textCursorDrawable="@null"
                                android:nextFocusDown="@+id/other_names"
                                android:inputType="text"
                                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                                android:id="@+id/last_name"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:layout_gravity="center"
                                android:text="Other names"
                                android:textSize="13sp"
                                android:textColor="@android:color/black"
                                android:id="@+id/text_other_names"/>

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_weight="1.5"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:background="@drawable/edit_view"
                                android:gravity="center"
                                android:textColor="@color/black_text"
                                android:textSize="13sp"
                                android:textCursorDrawable="@null"
                                android:inputType="text"
                                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                                android:id="@+id/other_names"/>
                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:textColor="@android:color/black"
                                android:text="Gender"
                                android:textSize="13sp"
                                android:id="@+id/text_gender_name"/>
                            <RadioGroup
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:id="@+id/radio_gender"
                                android:layout_toRightOf="@+id/text_gender_name"
                                android:layout_toEndOf="@+id/text_gender_name"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp">

                                <android.support.v7.widget.AppCompatRadioButton
                                    android:id="@+id/radio_male"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Male"
                                    android:textSize="12sp"
                                    app:buttonTint="@color/colorAccent"/>
                                <android.support.v7.widget.AppCompatRadioButton
                                    android:id="@+id/radio_female"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Female"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginStart="15dp"
                                    app:buttonTint="@color/colorAccent"/>
                            </RadioGroup>
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </ScrollView>


    </FrameLayout>

</LinearLayout>